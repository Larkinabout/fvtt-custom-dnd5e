<div id="custom-dnd5e-form" class="standard-form">
    <div class="standard-form scrollable">
        <fieldset>
            <legend>{{ localize "CUSTOM_DND5E.form.activities.customActivities" }}</legend>
            <div class="form-group">
                <label>{{ localize "CUSTOM_DND5E.activities.macro.enable.label" }}</label>
                <div class="form-fields">
                    <dnd5e-checkbox name="macro"{{#if macro}} checked{{/if}}></dnd5e-checkbox>
                </div>
                <p class="hint">{{ localize "CUSTOM_DND5E.activities.macro.enable.hint" }}</p>
            </div>
            <div class="form-group">
                <label>{{ localize "CUSTOM_DND5E.activities.move.enable.label" }}</label>
                <div class="form-fields">
                    <dnd5e-checkbox name="move"{{#if move}} checked{{/if}}></dnd5e-checkbox>
                </div>
                <p class="hint">{{ localize "CUSTOM_DND5E.activities.move.enable.hint" }}</p>
            </div>
            <div class="form-group">
                <label>{{ localize "CUSTOM_DND5E.activities.swap.enable.label" }}</label>
                <div class="form-fields">
                    <dnd5e-checkbox name="swap"{{#if swap}} checked{{/if}}></dnd5e-checkbox>
                </div>
                <p class="hint">{{ localize "CUSTOM_DND5E.activities.swap.enable.hint" }}</p>
            </div>
        </fieldset>
        <fieldset>
            <legend>{{ localize "CUSTOM_DND5E.form.activities.targetingPrompt" }}</legend>
            <div class="form-group">
                <label>{{ localize "CUSTOM_DND5E.activities.targeting.enable.label" }}</label>
                <div class="form-fields">
                    <dnd5e-checkbox name="targeting"{{#if targeting}} checked{{/if}}></dnd5e-checkbox>
                </div>
                <p class="hint">{{ localize "CUSTOM_DND5E.activities.targeting.enable.hint" }}</p>
            </div>
        </fieldset>
    </div>
    {{> "modules/custom-dnd5e/templates/footer.hbs"}}
</div>
